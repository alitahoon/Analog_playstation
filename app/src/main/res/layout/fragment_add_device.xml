<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.AddDevice"
    android:background="@color/secondory"
    android:padding="@dimen/_15sdp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Device Number : "
        android:textColor="@color/iconColor"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintBottom_toBottomOf="@+id/number_picker"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/number_picker" />

    <com.shawnlin.numberpicker.NumberPicker
        android:id="@+id/number_picker"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_80sdp"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/_15sdp"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="parent"
        app:np_dividerColor="@color/iconColor"
        app:np_height="180dp"
        app:np_min="1"
        app:np_selectedTextColor="@color/iconColor"
        app:np_selectedTextSize="@dimen/_14ssp"
        app:np_textColor="@color/primeryColor"
        app:np_textSize="@dimen/_12ssp"
        app:np_value="3"
        app:np_width="64dp" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_50sdp"
        android:elevation="@dimen/_15sdp"
        android:paddingHorizontal="@dimen/_15sdp"
        android:text="Add"
        android:textSize="@dimen/_12ssp"
        app:backgroundTint="@color/primeryColor"
        app:icon="@drawable/baseline_add_24"
        app:iconGravity="end"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/number_picker" />


</androidx.constraintlayout.widget.ConstraintLayout>