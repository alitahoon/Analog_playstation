<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primeryColor"
    android:padding="@dimen/_15sdp">

    <TextView
        android:id="@+id/playstationReservationtxtDevice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:drawableStart="@drawable/controller2_white"
        android:drawablePadding="@dimen/_5sdp"
        android:gravity="center|start"
        android:letterSpacing="0.1"
        android:text="Device 1"
        android:textColor="@color/white"
        android:textSize="@dimen/_14ssp"
        android:textStyle="bold" />

    <TextView
        android:layout_marginTop="@dimen/_5sdp"
        android:id="@+id/playstationReservationtxtReaminingTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/playstationReservationtxtDevice"
        android:layout_alignStart="@+id/playstationReservationtxtDevice"
        android:drawableStart="@drawable/baseline_access_time_24_white"
        android:drawablePadding="@dimen/_5sdp"
        android:gravity="center|start"
        android:layout_marginStart="@dimen/_10sdp"
        android:letterSpacing="0.1"
        android:text="Remaining Time : 00:00:00"
        android:textColor="@color/white"
        android:textSize="@dimen/_12ssp"
/>

    <TextView
        android:id="@+id/playstationReservationtxtPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_below="@+id/playstationReservationtxtReaminingTime"
        android:layout_alignStart="@+id/playstationReservationtxtDevice"
        android:drawableStart="@drawable/baseline_attach_money_24"
        android:drawablePadding="@dimen/_5sdp"
        android:gravity="center|start"
        android:letterSpacing="0.1"
        android:text="Price 0.0 EGP"
        android:textColor="@color/white"
        android:textSize="@dimen/_12ssp"
 />
</RelativeLayout>